<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_grey_600">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update"
        android:background="@color/md_blue_grey_600">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_blue_grey_600">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/navagation_background"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="@color/md_blue_grey_600"
                android:elevation="4dp"
                android:paddingBottom="24dp">


                <ImageButton
                    android:id="@+id/editProfile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_action_edit"
                    android:backgroundTint="@color/md_grey_100" />


                <EditText
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:enabled="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/md_white_1000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_profile_short_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:enabled="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Qualification"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/experience"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:text="Experience:-"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/exp_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:text="Experience"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="Room No.:-"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/room"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:text="roomno"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="Registration Id:-"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/registration_id_doc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:text="regno"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="Morning:-"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/morning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:clickable="false"
                        android:editable="false"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:text="09:00AM - 12:00PM"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="Evening:-"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/evening"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:clickable="false"
                        android:editable="false"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:text="05:00PM - 08:00PM"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="Contact No.:-"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:text="number"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="Specialization:-"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <EditText
                        android:maxLines="1"
                        android:singleLine="true"
                        android:id="@+id/specalize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:padding="20dp"
                        android:text="speciality"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/md_red_400"
        android:textColor="@color/md_white_1000"
        android:text="Update"
        android:visibility="gone" />
</RelativeLayout>