<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/md_grey_100">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/apt_receipt_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/apt_receipt_toolbar"
        android:id="@+id/ll1">

        <ImageView
            android:id="@+id/experience"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:background="@drawable/doctor"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="start"
            android:textStyle="italic"
            android:text="Doctor's Name:-"
            />


        <TextView
            android:id="@+id/doc_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="left"
            android:textColor="@color/md_black_1000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll1"
        android:id="@+id/ll2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/clock_flat"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:textStyle="italic"
            android:text="Date &amp; time:-"
            />


        <TextView
            android:id="@+id/date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="left"
            android:textColor="@color/md_black_1000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll2"
        android:id="@+id/ll3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="8dp"
            android:background="@drawable/avatar"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="start"
            android:textStyle="italic"
            android:text="Patient Name:-"
            />


        <TextView
            android:id="@+id/pat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="left"
            android:textColor="@color/md_black_1000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/ll4"
        android:layout_below="@+id/ll3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="8dp"
            android:background="@drawable/id_icon"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="start"
            android:textStyle="italic"
            android:text="ID number:-"
            />


        <TextView
            android:id="@+id/apt_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:gravity="left"
            android:textColor="@color/md_black_1000" />


    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:text="Remarks(By Doctor) :-"
        android:layout_below="@id/ll4"
        android:id="@+id/tv1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:background="#fff"
        android:elevation="1dp"
        android:textStyle="bold"
        android:clickable="false"
        android:id="@+id/remarks"
        android:layout_below="@id/tv1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll6">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/upload_pres"
            android:text="Upload Prescription"
            android:background="@color/md_green_500"
            android:textColor="@color/md_white_1000"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reschdule Appointment"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_blue_600"
            android:id="@+id/resched_apt"

            />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/ll6"
        android:id="@+id/view_reports"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/button"
        android:src="@drawable/view_report3"
        android:layout_margin="16dp"
        />
</RelativeLayout>
