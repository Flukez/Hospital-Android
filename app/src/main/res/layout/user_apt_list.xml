<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/doctor"
        android:padding="5dp" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/photo"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/photo"
        android:layout_toRightOf="@+id/photo"
        android:gravity="center_vertical"
        android:text="Doctor Name"
        android:textColor="@color/md_black_1000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/req_status"
        android:layout_alignBottom="@+id/photo"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:text="Date &amp; Time:-"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pref_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/req_status"
        android:layout_alignBottom="@+id/req_status"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/datei"
        android:layout_toRightOf="@+id/datei"
        android:layout_toLeftOf="@+id/req_status"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="date"
        android:textColor="@color/md_black_1000" />

    <TextView
        android:id="@+id/req_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancel_req"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/cancel_req"
        android:layout_toStartOf="@+id/cancel_req"
        android:gravity="center_vertical"
        android:text="Status"
        android:textColor="@color/md_black_1000"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/cancel_req"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_cancel_black_24dp"
        android:text="Cancel Request"
        android:textColor="@color/md_white_1000" />


</RelativeLayout>